<Window x:Class="ProyectoVentanaMysql.ProyectoFerreteria.VentanaOpcionesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoVentanaMysql.ProyectoFerreteria"
        mc:Ignorable="d"
        
        
        Title="Opciones"
        Height="180"
        Width="300"
        FontFamily="Courier New"
        FontSize="12"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="LightGray">

    <Grid>
        <ComboBox x:Name="YearComboBox" Width="100" Height="21">
            <ComboBoxItem Content="2019" />
            <ComboBoxItem Content="2020" />
            <ComboBoxItem Content="2021" />
            <ComboBoxItem Content="2022" />
            <ComboBoxItem Content="2023" />
            <ComboBoxItem Content="2024" />
            <!-- Agrega más años según sea necesario -->
        </ComboBox>
    </Grid>
</Window>
