<Window x:Class="ProyectoVentanaMysql.Examen.AniosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoVentanaMysql.Examen"
        mc:Ignorable="d"
        Title="Seleccione el año"
        Height="180"
        Width="300"
        FontFamily="Courier New"
        FontSize="12"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="LightGray">

    <Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <ComboBox x:Name="YearComboBox" Width="100" Height="21" SelectionChanged="YearComboBox_SelectionChanged">
                <!-- Agrega más años según sea necesario -->
            </ComboBox>
        </StackPanel>
        <!-- Agrega más años según sea necesario -->
    </Grid>
</Window>
