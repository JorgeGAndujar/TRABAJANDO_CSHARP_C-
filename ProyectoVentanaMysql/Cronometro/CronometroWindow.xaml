<Window x:Class="ProyectoVentanaMysql.Cronometro.CronometroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoVentanaMysql.Cronometro"
        mc:Ignorable="d"
        Title="Cronómetro" Height="200" Width="300" 
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Grid>

        <Label x:Name="TimerLabel" Content="00:00:00" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button x:Name="StartButton" Content="Iniciar" Width="80" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="PauseButton" Content="Pausar" Width="80" Margin="5" Click="PauseButton_Click"/>
            <Button x:Name="ResetButton" Content="Reiniciar" Width="80" Margin="5" Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
