<Window x:Class="VentanaWPF_1.Ventana1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VentanaWPF_1"
        mc:Ignorable="d"
        Title="Ventana1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Botón 1" Grid.Row="0" Grid.Column="0"/>
        <Button Content="Botón 2" Grid.Row="0" Grid.Column="1"/>
        <Button Content="Botón 3" Grid.Row="1" Grid.Column="0"/>
        <Button Content="Botón 4" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
